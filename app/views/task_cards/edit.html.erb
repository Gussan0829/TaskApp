<div class="cardeditPage">
  <div class='container'>
    <%= form_with model: @task_card, url: { action: :update }, html: { class: 'cardeditForm' }, local: true do |f| %>

      <%= render 'shared/error_messages', model: f.object %>

      <div class="cardeditForm_title">
          <%= f.label :title %><br>
          <%= f.text_field :title, class: "form-editTask", placeholder: "カード名" %>
      </div>
      <div class="cardeditForm_memo">
        <%= f.label :memo %><br>
        <%= f.text_area :memo, class: "form-editTask", placeholder: "詳細" %>
      </div>
      <div class="cardeditForm_dead">
        <%= f.label :deadline %>
        <span class="indispensable">任意</span><br>
        <div class="input-dead-wrap">
          <%= raw sprintf(
              f.date_select(
                :deadline, 
                class: "select-dead",
                with_css_classes:'XXXXX', 
                prompt:"--",
                use_month_numbers:true, 
                start_year:Time.now.year, 
                end_year:Time.now.year+10, date_separator:'%s'),
                "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
         </div>
      </div>

      <div class="text-center"><%= f.submit "更新する", class: "submitBtn" %></div>
    <% end %>
  </div>
</div>