<div class='cardshowPage'>
  <div class="container">
    <div class= "cardcontents_top">
      <div class="cardContents_listStatus">
        <div>リスト名</div>
        <div><%= @task_card.list.title %></div>
      </div>
    </div>
    <div class="cardContents">
      <div class="cardContents_title">
        <div>タイトル</div>
        <h2><%= @task_card.title %></h2>
      </div>
      <div class="cardContents_memo">
        <div>メモ</div>
        <div><%= @task_card.memo %></div>
      </div>
      <div class="cardContents_memo">
        <div>期日</div>
        <div><%= @task_card.deadline %></div>
      </div>

      <div class="cardContents_btnArea">
        <%= link_to '編集する', edit_list_task_card_path(@task_card.list, @task_card), class: "edit_btn" %>
        <%= link_to '削除をする', list_task_card_path(@task_card.list, @task_card), class: "delete_btn", method: :delete, data: { confirm: "このカードを削除して大丈夫ですか?" } %>
      </div>  
    </div>
    </div>
  </div>
</div>