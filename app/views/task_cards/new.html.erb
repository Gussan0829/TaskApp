<div class="cardnewPage">
  <div class='container'>
    <%= form_with model: @task_card, url: { action: :create }, class: 'cardnewForm' , local: true do |f| %>
      <%= f.hidden_field :list_id, value: @list.id %>

      <%= render 'shared/error_messages', model: f.object %>

      <div class="cardnewForm_title">
        <%= f.label :title %><br>
        <%= f.text_field :title, autofocus: true, class: "form-newTask", placeholder: "タスク名" %>
      </div>
      <div class="cardnewForm_memo">
        <%= f.label :memo %><br>
        <%= f.text_area :memo, autofocus: true, class: "form-newTask", placeholder: "詳細" %>
      </div>
      <div class="text-center"><%= f.submit "作成する", class: "SubmitBtn" %></div>
    <% end %>
  </div>
</div>

