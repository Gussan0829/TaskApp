<div class="topPage">
  <div class="listWrapper">
    <% @lists.each do |list| %>
      <div class="list">
        <div class="list_header">
          <h2 class="list_header_title"><%= list.title %></h2>
          <div class="list_header_action">
            <%= link_to content_tag(:i, '', class: 'fas fa-trash'), list, method: :delete, data: { confirm: "#{list.title}を削除しますか？" } %>

            <%= link_to content_tag(:i, '', class: 'fas fa-pen'), edit_list_path(list) %>
          </div>
        </div>
        <div class="cardWrapper">
          <div class="addCard">
            <i class="far fa-plus-square"></i>
            <%= link_to "タスクを追加", new_list_task_card_path(list), class: "addCard_link" %>
          </div>
          <% list.task_cards.each do |t| %>
            <%= link_to list_task_card_path(list, t), class:"cardDetail_link" do %>
              <div class="task">
                <h3 class="task_title"><%= t.title %></h3>
                <% if t.memo.size > 0 %>
                  <div class="task_detail is-exist"><i class="fas fa-bars"></i></div>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>